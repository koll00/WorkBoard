#findLog
  form(action='showLog', method='get', id='showLogForm')
    table
      tr
        td
          label(for='date') 日期
        td
          input(type='text',id='date', name='date', value=params.date)
        td
          label(for='envID') 环境
        td
          select(type='text',name='envID')
              if params.envID == 'PL2'
                  option(type='text',name='PL2',value='PL2', selected='true') PL2
                  option(type='text',name='PL3',value='PL3') PL3
                  option(type='text',name='PL4',value='PL4') PL4
              else if params.envID == 'PL3'
                  option(type='text',name='PL2',value='PL2') PL2
                  option(type='text',name='PL3',value='PL3', selected='true') PL3
                  option(type='text',name='PL4',value='PL4') PL4
              else if params.envID == 'PL4'
                  option(type='text',name='PL2',value='PL2') PL2
                  option(type='text',name='PL3',value='PL3') PL3
                  option(type='text',name='PL4',value='PL4', selected='true') PL4
              else
                  option(type='text',name='PL2',value='PL2', selected='true') PL2
                  option(type='text',name='PL3',value='PL3') PL3
                  option(type='text',name='PL4',value='PL4') PL4
        
        td
          label(for='date') 卡号
        td
          input(type='text', id='cardNo', name='cardNo', value=params.cardNo)
        td
          label(for='refresh') 自动刷新
        td
          if params.refresh == 'on'
            input(type='checkbox', id='refresh', name='refresh', checked)
          else
            input(type='checkbox', id='refresh',  name='refresh')
